<div>
  <form>
    <div class="form-group row"></div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label"></label>
      <p class="col-sm-10">情報を入力してください</p>
    </div>
  </form>

  <div>
    <%= form_tag '/recommends', method: :get do %>
      <div class="list-group">
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">よく参加するイベント</label>
          <div class="col-sm-10">
            <%= select_tag "event", options_for_select([ "選ぶ", "結婚式", "パーティー", "デート", "旅行" ], "選ぶ"), class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-sm-2 col-form-label">性</label>
          <div class="col-sm-10">
            <%= select_tag "gender", options_for_select([ "選ぶ", "男", "女" ], "選ぶ"), class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-sm-2 col-form-label">肌の色</label>
          <div class="col-sm-10">
            <%= select_tag "skin_color", options_for_select([ "選ぶ", "白", "黄", "黒" ], "選ぶ"), class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-sm-2 col-form-label">髪の色</label>
          <div class="col-sm-10">
            <%= select_tag "hair_color", options_for_select([ "選ぶ", "白", "黄", "黒", "モスグリーン" ], "選ぶ"), class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="col-sm-6"></div>
      <%= submit_tag "完了", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
