<div id="myCarousel" class="carousel slide" data-ride="carousel" style="padding-bottom: 0em" style="width:100%; height: 450px">
	<!-- Indicators -->
	<ol class="carousel-indicators">
		<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
		<li data-target="#myCarousel" data-slide-to="1"></li>
		<li data-target="#myCarousel" data-slide-to="2"></li>
	</ol>

	<!-- Wrapper for slides -->
	<div class="carousel-inner">
		<div class="item active">
			<%= image_tag "banner.png",alt:"", style:"width:100%; height: 450px" %>
			<div class="carousel-caption" style ="color:#ebfafa;text-shadow: 2px 2px #196666;font-weight:900">
				<h3>ファッション</h3>
				<p>適切な服を見つけるのは簡単です</p>
			</div>
		</div>

		<div class="item">
			<%= image_tag "banner-2.jpg",alt:"", style:"width:100%; height: 450px" %>
			<div class="carousel-caption" style ="color:#ebfafa;text-shadow: 2px 2px #196666;font-weight:900">
				<h3>イベント</h3>
				<p>適切な服をすばやく見つける</p>
			</div>
		</div>
	
		<div class="item">
			<%= image_tag "banner-3.png",alt:"", style:"width:100%; height: 450px" %>
			<div class="carousel-caption" style ="color:#ebfafa;text-shadow: 2px 2px #196666;font-weight:900">
				<h3>ファッション</h3>
				<p>適切な服を見つけるのは簡単です</p>
			</div>
		</div>
	</div>

	<!-- Left and right controls -->
	<a class="left carousel-control" href="#myCarousel" data-slide="prev">
		<span class="glyphicon glyphicon-chevron-left"></span>
		<span class="sr-only">Previous</span>
	</a>
	<a class="right carousel-control" href="#myCarousel" data-slide="next">
		<span class="glyphicon glyphicon-chevron-right"></span>
		<span class="sr-only">Next</span>
	</a>
</div>

